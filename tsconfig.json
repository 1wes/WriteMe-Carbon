{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true
  },
  "include": ["vite-env.d.ts", "src/**/*"],
  "exclude": ["node_modules", "dist"]
}
